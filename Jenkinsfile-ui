pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }

        stage('UI') {
            steps {
                bat 'npm run wdio'
                bat 'npm run report'
            }
        }
    }
    post {
        always {
            junit allowEmptyResults: true, testResults: 'report/*.xml'
            archiveArtifacts artifacts: './reports/html-reports/*.html'
        }
    }
}