pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }

        stage('UI') {
            steps {
                bat 'npm run wdio'
                bat 'allure generate'
            }
        }
    }
    post {
        always {
            junit allowEmptyResults: true, testResults: 'reports/*.xml'
            archiveArtifacts artifacts: 'allure-report/index.html'
           // allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}