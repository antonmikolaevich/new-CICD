pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                bat 'npm install'
            }
        }

        stage('UI') {
            steps {
                bat 'npm run wdio'
            }
        }
    }
    post {
        always {
            bat 'npm run report'
            junit allowEmptyResults: true, testResults: 'report/*.xml'
            //archiveArtifacts artifacts: 'reports/html-reports/master-report.html'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'reports/html-reports', reportFiles: 'master-report.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
        }
    }
}